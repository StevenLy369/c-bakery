@using Bakery.Models;

<h1>Add a New Order</h1>

<form action='/vendor/@Model.Id/order' method="post">

  <label for="Title">Title</label>
  <input id="Title" name="Title" type="Text" required>
  <br>
 

  <label for="description">Order Type</label>
  <input id="description" name="description" type="text" required>
  <br>

  <label for="date">Date</label>
  <input id="date" name="date" type="text" required>
  <br>

  <label for="Price">Price</label>
  <input id="Price" name="Price" type="number" required>
  <br>

  

  <button type="submit" class="btn">Add</button>
</form>


<button class="btn"><a href="/">Home</a></button>
<button class="btn"><a href="/vendor">Vendor List</a></button>